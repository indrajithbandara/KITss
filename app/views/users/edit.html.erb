<% provide(:title, "Edit user") %> 
<h1>Update your profile</h1>

<div class="row">
  <div class="span6 offset3">
    <div id="gravatar-form">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails">change avatar</a>
    </div>
    <hr>

  <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :headline, "What are you working on?" %>
      <%= f.text_field :headline %>

      <%= f.label :university_headline, "What were you at the university?" %>
      <%= f.text_field :university_headline %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>


    <hr>


    
    <% if current_user.linkedin_token %>
      <%= link_to "Disconnect from LinkedIn", linkedin_register_path %>
    <% else %>
      <%= link_to "Connect with LinkedIn", linkedin_deregister_path %>
    <% end %>
  </div>
</div>
